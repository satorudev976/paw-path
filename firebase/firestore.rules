rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc(uid) {
      return get(/databases/$(database)/documents/users/$(uid));
    }

    function isOwner() {
      return isSignedIn()
        && userDoc(request.auth.uid).data.role == 'owner';
    }

    function belongsToFamily(familyId) {
      return isSignedIn()
        && userDoc(request.auth.uid).data.familyId == familyId;
    }

    match /users/{uid} {

      // 家族メンバーは read 可
       allow read: if isSignedIn() 
        && userDoc(request.auth.uid).data.familyId == resource.data.familyId;

      // 作成（新規ログイン時）
      allow create: if isSignedIn()
        && request.auth.uid == uid;

      // 更新（nickname など）
      allow update: if isSignedIn()
        && request.auth.uid == uid;

      // 削除（アカウント削除）
      allow delete: if isSignedIn()
        && request.auth.uid == uid;
    }
    match /families/{familyId} {

      // 家族メンバーは read 可
      allow read: if belongsToFamily(familyId);

      // 作成（新規のみ）
      allow create: if isSignedIn();

      // 更新は owner のみ
      allow update: if belongsToFamily(familyId)
        && isOwner();

      // 削除は原則禁止（事故防止）
      allow delete: if false;
    }
    match /families/{familyId}/walks/{walkId} {

      // 家族なら閲覧可（readOnly でも OK）
      allow read: if belongsToFamily(familyId);

      // 作成：家族 
      allow create: if belongsToFamily(familyId)
        && request.resource.data.recordedBy == request.auth.uid;

      // 更新：禁止（immutable）
      allow update: if false;

      // 削除：記録者のみ
      allow delete: if belongsToFamily(familyId)
        && resource.data.recordedBy == request.auth.uid;
    }
    match /invites/{inviteId} {

      // 家族オーナーのみ read
      allow read: if isSignedIn()
        && isOwner();

      // 作成：オーナーのみ（回数制限は Function）
      allow create: if isSignedIn()
        && isOwner();

      // 更新：Function のみ想定
      allow update: if false;

      // 削除：期限切れ cleanup 用（Function）
      allow delete: if false;
    }
  }
}